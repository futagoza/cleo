{
    "name": "cleo",
    "version": "0.0.0",
    "description": "Command line utilities for Node.js",
    "keywords": [
        "argv",
        "cli",
        "color",
        "config",
        "log",
        "option",
        "repl",
        "taskrunner"
    ],
    "repository": "futagoza/cleo",
    "license": "MIT",
    "author": "Futago-za Ryuu <futagoza.ryuu@gmail.com>",
    "files": [
        "out",
        "src"
    ],
    "main": "out/index.js",
    "dependencies": {
        "colourant": "1.0.0",
        "camelcase": "5.3.1",
        "cosmiconfig": "6.0.0",
        "dateformat": "3.0.3",
        "tslib": "1.10.0"
    },
    "scripts": {
        "rebuild": "rimraf out && tsc -p src",
        "test": "nyc ava",
        "test-and-update-snapshots": "ava -u",
        "coverage": "codecov -f coverage/*.json",
        "lint": "eslint --ext .js,.ts .",
        "preversion": "npm test && npm run rebuild",
        "postversion": "git push --follow-tags && npm publish"
    },
    "devDependencies": {
        "@types/dateformat": "3.0.1",
        "@futagoza/eslint-config-dev": "11.2.0",
        "@futagoza/eslint-config-typescript": "11.2.0",
        "@futagoza/tsconfig": "1.0.0",
        "ava": "2.4.0",
        "codecov": "3.6.1",
        "eslint": "6.6.0",
        "nyc": "14.1.1",
        "rimraf": "3.0.0",
        "ts-node": "8.5.0",
        "typescript": "3.7.2"
    },
    "engines": {
        "node": ">= 8"
    }
}
